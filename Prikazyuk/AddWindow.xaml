<Window x:Class="Prikazyuk.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prikazyuk"
        mc:Ignorable="d"
        Title="AddWindow" Background="Gray" Height="450" Width="800">
    <Grid>
        <Button Click="AddBackBtn" MinWidth="70" Content="Назад"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <StackPanel MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="0 0 0 40" Content="Добавление Новой Машины"/>
            <Label Content="Название"/>
            <TextBox x:Name="CarNameTextBox"/>
            <Label Content="Цена"/>
            <TextBox Text="{Binding Cost}"/>
            <Label Content="Описание"/>
            <TextBox Text="{Binding Discription}"/>
            <Label Content="Марка"/>
            <TextBox Text="{Binding Mark}"/>
            <Label Content="Страна"/>
            <TextBox Text="{Binding Country}"/>
            <Button Click="AddCarBtn" Margin="0 40 0 0" Content="Добавить"/>
        </StackPanel>
    </Grid>
</Window>
