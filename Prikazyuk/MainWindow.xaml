<Window x:Class="Prikazyuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prikazyuk"
        mc:Ignorable="d"
        Title="MainWindow" Background="Gray" Height="450" Width="800">
    <Grid>
        <StackPanel MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="0 5 0 0" HorizontalAlignment="Center" Content="Авторизация"/>
            <Label Margin="0 5 0 0" Content="Логин"/>
            <TextBox Text="{Binding Login}" Margin="0 5 0 0"/>
            <Label Margin="0 5 0 0" Content="Пароль"/>
            <TextBox Text="{Binding Password}" Margin="0 5 0 0"/>
            <Button Click="Auth" Margin="0 5 0 0" Content="Авторизоваться"/>
            <Button Click="RegisterBtn" Margin="0 10 0 0" Content="Зарегистрироваться"/>
        </StackPanel>
    </Grid>
</Window>
